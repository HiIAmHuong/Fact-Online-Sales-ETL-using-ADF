{
	"name": "ETLCustomer",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "CustomerIndividual",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "CustomerDemographics",
						"type": "DatasetReference"
					},
					"name": "source2"
				},
				{
					"dataset": {
						"referenceName": "Customer",
						"type": "DatasetReference"
					},
					"name": "source3"
				},
				{
					"dataset": {
						"referenceName": "DimCustomer",
						"type": "DatasetReference"
					},
					"name": "source4"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DimCustomer",
						"type": "DatasetReference"
					},
					"name": "DimCustomer"
				}
			],
			"transformations": [
				{
					"name": "sort1"
				},
				{
					"name": "sort2"
				},
				{
					"name": "sort3"
				},
				{
					"name": "join1"
				},
				{
					"name": "sort4"
				},
				{
					"name": "join2"
				},
				{
					"name": "addHashSource"
				},
				{
					"name": "select1"
				},
				{
					"name": "addHashExisting"
				},
				{
					"name": "filterForActive"
				},
				{
					"name": "NewAndUpdateRow"
				},
				{
					"name": "addKey"
				},
				{
					"name": "JoinWithMaxSurrKey"
				},
				{
					"name": "FilterForUpdateValue"
				},
				{
					"name": "UpdateObsolete"
				},
				{
					"name": "MarkAsUpdate"
				},
				{
					"name": "DropUnwantedColumn"
				},
				{
					"name": "GetMaxSurroKey"
				},
				{
					"name": "AddValidDate"
				},
				{
					"name": "DropHashAndMaxKeyColumn"
				},
				{
					"name": "MarkAsInsert"
				},
				{
					"name": "UnionAllData"
				},
				{
					"name": "select2"
				},
				{
					"name": "filter2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          BusinessEntityID as integer,",
				"          Title as string,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          PhoneNumber as string,",
				"          PhoneNumberType as string,",
				"          EmailAddress as string,",
				"          EmailPromotion as integer,",
				"          AddressType as string,",
				"          AddressLine1 as string,",
				"          AddressLine2 as string,",
				"          City as string,",
				"          StateProvinceName as string,",
				"          PostalCode as string,",
				"          CountryRegionName as string,",
				"          Demographics as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source(output(",
				"          BusinessEntityID as integer,",
				"          TotalPurchaseYTD as decimal(19,4),",
				"          DateFirstPurchase as timestamp,",
				"          BirthDate as timestamp,",
				"          MaritalStatus as string,",
				"          YearlyIncome as string,",
				"          Gender as string,",
				"          TotalChildren as integer,",
				"          NumberChildrenAtHome as integer,",
				"          Education as string,",
				"          Occupation as string,",
				"          HomeOwnerFlag as boolean,",
				"          NumberCarsOwned as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source2",
				"source(output(",
				"          CustomerID as integer,",
				"          PersonID as integer,",
				"          StoreID as integer,",
				"          TerritoryID as integer,",
				"          AccountNumber as string,",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source3",
				"source(output(",
				"          CustomerID as integer,",
				"          DateFirstPurchase as timestamp,",
				"          BirthDate as timestamp,",
				"          MaritalStatus as string,",
				"          YearlyIncome as string,",
				"          Gender as string,",
				"          TotalChildren as integer,",
				"          NumberChildrenAtHome as integer,",
				"          Education as string,",
				"          Occupation as string,",
				"          HomeOwnerFlag as boolean,",
				"          NumberCarsOwned as integer,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          PhoneNumber as string,",
				"          PhoneNumberType as string,",
				"          EmailAddress as string,",
				"          EmailPromotion as integer,",
				"          AddressType as string,",
				"          AddressLine1 as string,",
				"          AddressLine2 as string,",
				"          City as string,",
				"          StateProvinceName as string,",
				"          PostalCode as string,",
				"          CountryRegionName as string,",
				"          ValidFrom as date,",
				"          ValidTo as date,",
				"          isActive as integer,",
				"          CustomerKey as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source4",
				"source1 sort(asc(BusinessEntityID, true)) ~> sort1",
				"source2 sort(asc(BusinessEntityID, true)) ~> sort2",
				"source3 sort(asc(CustomerID, true)) ~> sort3",
				"sort2, select1 join(BusinessEntityID == PersonID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 sort(asc(CustomerID, true)) ~> sort4",
				"sort1, sort4 join(source1@BusinessEntityID == PersonID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 derive(isActive = 1,",
				"          id_hash = md5(CustomerID),",
				"          columns_hash = md5(concat(FirstName,EmailAddress))) ~> addHashSource",
				"sort3 select(mapColumn(",
				"          CustomerID,",
				"          PersonID,",
				"          TerritoryID",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"filterForActive derive(columns_hash = md5(concat(FirstName,EmailAddress)),",
				"          id_hash = md5(CustomerID)) ~> addHashExisting",
				"source4 filter(toInteger(byName('isActive')) == 1) ~> filterForActive",
				"filter2, addHashExisting exists(addHashSource@id_hash == addHashExisting@id_hash",
				"     && addHashSource@columns_hash == addHashExisting@columns_hash,",
				"     negate:true,",
				"     broadcast: 'auto')~> NewAndUpdateRow",
				"select2 keyGenerate(output(CustomerKey as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> addKey",
				"addKey, GetMaxSurroKey join(CustomerKey == MaxCustomerKey || true(),",
				"     joinType:'cross',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinWithMaxSurrKey",
				"addHashExisting, NewAndUpdateRow exists(addHashExisting@id_hash == addHashSource@id_hash,",
				"     negate:false,",
				"     broadcast: 'auto')~> FilterForUpdateValue",
				"FilterForUpdateValue derive(ValidTo = currentDate(),",
				"          isActive = 0) ~> UpdateObsolete",
				"UpdateObsolete alterRow(updateIf(true())) ~> MarkAsUpdate",
				"MarkAsUpdate select(mapColumn(",
				"          CustomerKey,",
				"          CustomerID,",
				"          DateFirstPurchase,",
				"          BirthDate,",
				"          MaritalStatus,",
				"          YearlyIncome,",
				"          Gender,",
				"          TotalChildren,",
				"          NumberChildrenAtHome,",
				"          Education,",
				"          Occupation,",
				"          HomeOwnerFlag,",
				"          NumberCarsOwned,",
				"          FirstName,",
				"          MiddleName,",
				"          LastName,",
				"          Suffix,",
				"          PhoneNumber,",
				"          PhoneNumberType,",
				"          EmailAddress,",
				"          EmailPromotion,",
				"          AddressType,",
				"          AddressLine1,",
				"          AddressLine2,",
				"          City,",
				"          StateProvinceName,",
				"          PostalCode,",
				"          CountryRegionName,",
				"          ValidFrom,",
				"          ValidTo,",
				"          isActive",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> DropUnwantedColumn",
				"addHashExisting aggregate(MaxCustomerKey = max(toInteger(byName('CustomerKey')))) ~> GetMaxSurroKey",
				"JoinWithMaxSurrKey derive(isActive = 1,",
				"          ValidFrom = currentDate(),",
				"          ValidTo = addMonths(currentDate(),120)) ~> AddValidDate",
				"AddValidDate select(mapColumn(",
				"          Title,",
				"          FirstName,",
				"          MiddleName,",
				"          LastName,",
				"          Suffix,",
				"          PhoneNumber,",
				"          EmailAddress,",
				"          EmailPromotion,",
				"          City,",
				"          StateProvinceName,",
				"          CountryRegionName,",
				"          TotalPurchaseYTD,",
				"          DateFirstPurchase,",
				"          BirthDate,",
				"          MaritalStatus,",
				"          YearlyIncome,",
				"          Gender,",
				"          TotalChildren,",
				"          NumberChildrenAtHome,",
				"          Education,",
				"          Occupation,",
				"          HomeOwnerFlag,",
				"          NumberCarsOwned,",
				"          CustomerID,",
				"          TerritoryID,",
				"          isActive,",
				"          CustomerKey,",
				"          ValidFrom,",
				"          ValidTo",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> DropHashAndMaxKeyColumn",
				"DropHashAndMaxKeyColumn alterRow(insertIf(true())) ~> MarkAsInsert",
				"MarkAsInsert, DropUnwantedColumn union(byName: true)~> UnionAllData",
				"NewAndUpdateRow select(mapColumn(",
				"          Title,",
				"          FirstName,",
				"          MiddleName,",
				"          LastName,",
				"          Suffix,",
				"          PhoneNumber,",
				"          EmailAddress,",
				"          EmailPromotion,",
				"          City,",
				"          StateProvinceName,",
				"          CountryRegionName,",
				"          BusinessEntityID = source2@BusinessEntityID,",
				"          TotalPurchaseYTD,",
				"          DateFirstPurchase,",
				"          BirthDate,",
				"          MaritalStatus,",
				"          YearlyIncome,",
				"          Gender,",
				"          TotalChildren,",
				"          NumberChildrenAtHome,",
				"          Education,",
				"          Occupation,",
				"          HomeOwnerFlag,",
				"          NumberCarsOwned,",
				"          CustomerID = PersonID,",
				"          TerritoryID,",
				"          isActive,",
				"          id_hash,",
				"          columns_hash,",
				"          BusinessEntityID = source1@BusinessEntityID",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select2",
				"addHashSource filter(isDistinct(id_hash)) ~> filter2",
				"UnionAllData sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          CustomerID as integer,",
				"          DateFirstPurchase as timestamp,",
				"          BirthDate as timestamp,",
				"          MaritalStatus as string,",
				"          YearlyIncome as string,",
				"          Gender as string,",
				"          TotalChildren as integer,",
				"          NumberChildrenAtHome as integer,",
				"          Education as string,",
				"          Occupation as string,",
				"          HomeOwnerFlag as boolean,",
				"          NumberCarsOwned as integer,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          PhoneNumber as string,",
				"          PhoneNumberType as string,",
				"          EmailAddress as string,",
				"          EmailPromotion as integer,",
				"          AddressType as string,",
				"          AddressLine1 as string,",
				"          AddressLine2 as string,",
				"          City as string,",
				"          StateProvinceName as string,",
				"          PostalCode as string,",
				"          CountryRegionName as string,",
				"          ValidFrom as date,",
				"          ValidTo as date,",
				"          isActive as integer,",
				"          CustomerKey as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['CustomerID'],",
				"     format: 'table',",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          isActive,",
				"          CustomerID,",
				"          BirthDate,",
				"          MaritalStatus,",
				"          YearlyIncome,",
				"          Gender,",
				"          TotalChildren,",
				"          NumberChildrenAtHome,",
				"          Education,",
				"          Occupation,",
				"          HomeOwnerFlag,",
				"          NumberCarsOwned,",
				"          FirstName,",
				"          MiddleName,",
				"          LastName,",
				"          Suffix,",
				"          PhoneNumber,",
				"          EmailAddress,",
				"          EmailPromotion,",
				"          StateProvinceName,",
				"          CountryRegionName,",
				"          ValidFrom,",
				"          ValidTo",
				"     )) ~> DimCustomer"
			]
		}
	}
}